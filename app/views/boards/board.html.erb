<div class="<%= @klass %> board">
	<h1><%= @board_name %> Board</h1>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th colspan="2"></th>
				<% (1..@league.size).each do |n| %>
					<th><%= n %></th>
				<% end %>
				<th colspan="2"></th>
			</tr>
			<% if @klass != 'adp' %>
				<tr>
					<th colspan="2"></th>
					<% @fantasy_teams.each do |team| %>
						<th><%= team.owner %></th>
					<% end %>
					<th colspan="2"></th>
				</tr>
			<% end %>
		</thead>
		<tbody>
			<% @rounds.each_with_index do |round, index| %>
				<% if index % 2 == 1 %>
					<% round = round.reverse %>
					<% symbol = '❮' %>
					<% klass = 'odd' %>
				<% else %>
					<% symbol = '❯' %>
					<% klass = 'even' %>
				<% end %>
				<tr class=<%= klass %>>
					<td><%= index + 1 %></td>
					<td class="arrow"><%= symbol %></td>
					<% if round.count < @league.size && (@klass == 'draft' && klass == 'odd') %>
						<% (@league.size - round.count).times do |i| %>
							<td></td>
						<% end %>
					<% end %>
					<% round.each do |player| %>
						<td class="player 
						<%= player.position.downcase %> 
						<%= 'limited' if @limited_positions.include?(player.position) %> 
						<%= player.picked?(@league) ? 'picked' : 'unpicked' %>" 
						data-player="<%= player.id %>"
						data-toggle="tooltip" 
						data-placement="top" 
						data-container="body" 
						data-delay='{"show":"1500", "hide":"100"}' 
						title="<%= player.summary %>"><%= player.name %></td>
					<% end %>
					<% if round.count < @league.size && (@klass != 'draft' || klass == 'even') %>
						<% if index >= @league.size %>
							<td colspan="<%= @league.size - round.count %>"></td>	
						<% else %>
							<% (@league.size - round.count).times do |i| %>
								<td></td>
							<% end %>	
						<% end %>
					<% end %>
					<td class="arrow"><%= symbol %></td>
					<td><%= index + 1 %></td>
				</tr>
			<% end %>
			<% if @rounds.count < @league.roster_size %>
				<% ((@rounds.count)..(@league.roster_size-1)).each do |index| %>
					<% if index % 2 == 1 %>
						<% symbol = '❮' %>
						<% klass = 'odd' %>
					<% else %>
						<% symbol = '❯' %>
						<% klass = 'even' %>
					<% end %>
					<tr class=<%= klass %>>
						<td><%= index + 1%></td>
						<td class="arrow"><%= symbol %></td>
						<% (1..@league.size).each do |i| %>
							<td></td>
						<% end %>
						<td class="arrow"><%= symbol %></td>
						<td><%= index + 1%></td>
					</tr>
				<% end %>
			<% end %>
		</tbody>
	</table>
</div>