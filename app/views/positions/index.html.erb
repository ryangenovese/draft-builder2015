<div class="positions">
	<div class="col-md-8 col-md-offset-2">
		<h1><%= @position %></h1>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Rank</th>
					<th class="<%= "highlighted" if @adp %>"><a href=".">ADP Pick</a></th>
					<th>Player</th>
					<th>NFL Team</th>
					<!-- <th>ADP</th> -->
					<th class="<%= "highlighted" if @points %>"><a href="?rank=points">Projected Points</a></th>
					<th>Owner</th>
				</tr>
			</thead>
			<tbody>
				<% @players.each_with_index do |player, index| %>
					<% if player.picked? %>
						<tr class="player picked <%= player.position.downcase %>" data-player="<%= player.id %>">
							<td><%= player.position_rank %></td>
							<td><%= player.adp_round %></td>
							<td><%= player.name %></td>
							<td><%= player.nfl_team.shortname %></td>
							<!-- <td><%= player.adp_ffc %></td> -->
							<td><%= player.projected_points %></td>
							<td class="owner"><%= player.fantasy_team.owner %></td>
						</tr>
					<% else %>
						<tr class="player unpicked <%= player.position.downcase %>" data-player="<%= player.id %>">
							<td><%= player.position_rank %></td>
							<td><%= player.adp_round %></td>
							<td><%= player.name %></td>
							<td><%= player.nfl_team.shortname %></td>
							<!-- <td><%= player.adp_ffc %></td> -->
							<td><%= player.projected_points %></td>
							<td class="owner"></td>
						</tr>
					<% end %>	
				<% end %>
			</tbody>
		</table>	
	</div>
</div>