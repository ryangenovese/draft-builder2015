<h1>Editing Teams</h1>
<div class="col-md-4 col-md-offset-4">
	<%= form_for @league, url: league_teams_update_path(@league), html: {class: "form-horizontal"} do |f| %>
		<% if @league.errors.any? %>
		  <div id="error_explanation">
		    <h2><%= pluralize(@league.errors.count, "error") %> prohibited this league from being saved:</h2>

		    <ul>
		    <% @league.errors.full_messages.each do |message| %>
		      <li><%= message %></li>
		    <% end %>
		    </ul>
		  </div>
		<% end %>

		<% @teams.each_with_index do |team, i| %>
			<div class="form-group">
				<h2>Pick <%= i+1 %></h2>
				<%= f.fields_for :fantasy_teams, team do |team_fields| %>
					<%= team_fields.label :owner, class: "col-sm-2 control-label" %>
					<div class="col-sm-10">
						<%= team_fields.text_field :owner, class: 'form-control' %>
					</div>
				<% end %>
			</div>
		<% end %>
		<div class="form-group">
			<div class="col-sm-10 col-sm-offset-2">
				<%= f.submit 'Update Owners', class: "btn btn-primary btn-lg" %>
			</div>
		</div>
	<% end %>
</div>