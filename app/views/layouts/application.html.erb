<!DOCTYPE html>
<html>
<head>
  <title>Hymm2015</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">HYMM 2015</a>
    </div>
    <div class="btn-group" role="group">
      <% if @board %>
        <a href="/board" class="btn btn-default navbar-btn active">Board</a>
      <% else %>
        <a href="/board" class="btn btn-default navbar-btn">Board</a>  
      <% end %>
      
    </div>
    <div class="btn-group" role="group">
      <% @positions.each do |position| %>
      	<% if @position == position %>
      		<%= link_to position, "/#{position}", {class: "btn btn-default navbar-btn active"} %>
      	<% else %>
      		<%= link_to position, "/#{position}", {class: "btn btn-default navbar-btn"} %>
      	<% end %>
    	<% end %>
    </div>
  </div>
</nav>

<!-- <div class="container"> -->
  <div class="col-md-2 sidebar">
    <div class="list-group draft-order">
      <% @draft_picks.each do |pick| %>
        <% if pick.selected? %>
          <button type="button" class="list-group-item disabled selected"><span class="pick-number"><%= pick.to_d %></span><%= pick.nfl_player.name %></button>
        <% else %>
          <button type="button" class="list-group-item unselected"><span class="pick-number"><%= pick.to_d %></span><%= pick.fantasy_team.owner %></button>
        <% end %>
      <% end %>      
    </div>
  </div>
	<div class="col-md-10 content">
    <%= yield %> 
  </div>
<!-- </div> -->

</body>
</html>
