<div class="col-md-4 col-md-offset-4">
  <%= form_for @league, html: {class: "form-horizontal"} do |f| %>
    <% if @league.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@league.errors.count, "error") %> prohibited this league from being saved:</h2>

        <ul>
        <% @league.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control', autofocus: true %>
      </div>
    </div>
    <% if action_name == 'new' %>
      <div class="form-group">
        <%= f.label :size, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.number_field :size, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :roster_style, 'Roster Style', class: "col-sm-2 control-label" %> 
        <div class="col-sm-10">
          <%= f.select :roster_style, League.roster_styles.to_select, {}, {class: 'form-control'} %>
        </div>
      </div>
    <% else %>
      <div class="form-group">
        <%= f.label :size, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <p class="form-control-static"><%= @league.size %></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :roster_style, 'Roster Style', class: "col-sm-2 control-label" %> 
        <div class="col-sm-10">
          <p class="form-control-static"><%= @league.roster_style.titleize %></p>
        </div>
      </div>
    <% end %>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <% button_text = action_name == 'new' ? 'Create League' : 'Update League' %>
        <%= f.submit button_text, class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  <% end %>

</div>