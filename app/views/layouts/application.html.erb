<!DOCTYPE html>
<html>
<head>
  <title>Hymm2015</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">HYMM 2015</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Boards <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><%= link_to 'Draft', '/board' %></li>
          <li><%= link_to 'ADP', '/board/adp' %></li>
          <li><%= link_to 'Points', '/board/points' %></li>
        </ul>
      </li>
    </ul>
    <ul class="nav navbar-nav">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Positions <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <% @positions.each do |position| %>
            <li><%= link_to position, "/#{position}" %></li>
          <% end %>
        </ul>
      </li>
    </ul>
    <ul class="nav navbar-nav">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Fantasy Teams <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <% @fantasy_teams.each do |team| %>
            <li><%= link_to team.owner, "/team/#{team.owner.downcase}" %></li>
          <% end %>
        </ul>
      </li>
    </ul>
    <p class="navbar-text navbar-right current-pick">Current Pick: <%= @current_pick.to_d %> <%= @current_pick.fantasy_team.owner %></p>
    </ul>
  </div>
</nav>

<!-- <div class="container"> -->
  <div class="col-md-2 sidebar">
    <div class="list-group draft-order">
      <% @draft_picks.each do |pick| %>
        <% if pick.selected? %>
          <button type="button" class="list-group-item disabled selected"><span class="pick-number"><%= pick.to_d %></span><%= pick.nfl_player.name %></button>
        <% else %>
          <button type="button" class="list-group-item unselected"><span class="pick-number"><%= pick.to_d %></span><%= pick.fantasy_team.owner %></button>
        <% end %>
      <% end %>      
    </div>
  </div>
	<div class="col-md-10 content">
    <%= yield %> 
  </div>
<!-- </div> -->

</body>
</html>
